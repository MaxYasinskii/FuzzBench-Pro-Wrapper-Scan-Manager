# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/fuzzbranchdb"

# Session Configuration
SESSION_SECRET="your-256-bit-random-session-secret"

# Application Environment
NODE_ENV="development"

# Optional: Custom Port (defaults to 5000)
PORT=5000

# PostgreSQL Direct Connection (auto-populated by DATABASE_URL)
PGHOST=localhost
PGPORT=5432
PGUSER=username
PGPASSWORD=password
PGDATABASE=fuzzbranchdb

# SSH configuration (optional). When SSH_HOST is set, commands will be executed
# remotely using the ssh binary.
SSH_HOST=
SSH_USER=
SSH_PORT=22
SSH_KEY_PATH=

